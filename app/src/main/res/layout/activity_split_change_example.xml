<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplitChangeExampleActivity">

    <project.android.imageprocessing.FastImageProcessingView
        android:id="@+id/fast_image_processing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <project.android.allfiltersexample.extfilter.view.FilterScrollViewPager
        android:id="@+id/filter_scroll_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/cur_filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="原图"
        android:textSize="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="8dp"/>

</FrameLayout>